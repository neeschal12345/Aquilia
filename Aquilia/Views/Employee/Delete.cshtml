@model Aquilia.Models.Employee
<!DOCTYPE html>

<html>

<body>
        <div class="card" style="padding: 20px;font-family: 'Public Sans', sans-serif; opacity:80%;">
            <form method="post" asp-action="AddNewEmployee" asp-controller="Employee">
                <h1 style="padding-bottom:30px;">New Employee Entry</h1>
                <hr />
                <div class="row">
                    <div class="col-xl-3">
                        <label for="vendorName">Employee Name</label>
                        <input type="text" asp-for="EmployeeName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter New Employee Name">
                    </div>
                    <div class="col-xl-3">
                        <label for="exampleInputPassword1">Employee Address</label>
                        <input type="text" asp-for="EmployeeAddress" class="form-control" id="exampleInputPassword1" placeholder="Enter Employee Address">
                    </div>

                    <div class="col-xl-3">
                        <label for="exampleInputPassword1">Employee Contact No:</label>
                        <input type="text" asp-for="EmployeeContactNo" class="form-control" id="exampleInputPassword1" placeholder="Enter Employee Contact No.">
                        <input type="text" asp-for="Active" class="form-control" id="exampleInputPassword1" placeholder="Enter Employee Contact No." hidden value="true">

                    </div>
                    <div class="col-xl-3">
                        <label>Employee Type</label>
                        @Html.DropDownListFor(m => m.EmployeeType,
                             new SelectList(Enum.GetValues(typeof(EmployeeType))),
                             "---- Select Employee Type ----", new { style = "padding: 8px; padding: right:187px;" })
                        
                    </div>
                </div>

                <button type="reset" class="btn btn-danger" style="margin-top:20px; float:right;"><i class="far fa-window-close"></i> Cancel</button>
                <button type="submit" class="btn btn-success" style="margin-top:20px; margin-right:20px; float:right;"><i class="far fa-check-square"></i> Submit</button>
            </form>
        </div>

</body>

</html>

