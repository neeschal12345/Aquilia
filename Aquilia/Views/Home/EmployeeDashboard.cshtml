@model Aquilia.ViewModel.Dashboard.DashboardViewModel
<div class="row" onload="numb()">
    <!-- ============================================================== -->
    <!-- sales  -->
    <!-- ============================================================== -->
    <div class="col-xl-2" style="padding:0px 0 10px 15px;">
        <div class="card border-3 border-top border-top-primary">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Asset Valuation</h6>
                <div class="metric-value d-inline-block">
                    <h3 id="stocks">NRs. @Model.StockReportVM.TotalAsset</h3>
                </div>
                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                    <span class="icon-circle-small icon-box-xs text-success bg-success-light"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2" style="padding:0px 0 10px 10px;">
        <div class="card border-3 border-top border-top-primary">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Recieveables</h6>
                <div class="metric-value d-inline-block">
                    <h3 class="mb-1" id="stocks">NRs. @Model.StockReportVM.TotalReceivable</h3>
                </div>
                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2" style="padding:0px 0 10px 10px;">
        <div class=" card border-3 border-top border-top-primary">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Sales Amount</h6>
                <div class="metric-value d-inline-block">
                    <h3 class="mb-1" id="stocks">NRs. @Model.StockReportVM.TotalSales</h3>
                </div>
                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-lg-3 col-md-6 col-sm-12 col-12" style="padding:0px 15px 10px 10px;">
        <div class="card border-3 border-top border-top-primary" style="width:276px;">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Expenses</h6>
                <div class="metric-value d-inline-block">
                    <h3 class="mb-1">NRs. @Model.StockReportVM.TotalStock</h3>
                </div>
                <div class="metric-label d-inline-block float-right text-danger font-weight-bold">
                    <span class="icon-circle-small icon-box-xs text-danger bg-danger-light bg-danger-light "></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2" style="padding:0px 0 10px 10px;">
        <div class=" card border-3 border-top border-top-primary">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Active Employees</h6>
                <div class="metric-value d-inline-block">
                    <h3 class="mb-1" id="stocks">@Model.BankBalanceVM.TotalHomebasedEmployees employee(s) </h3>
                </div>
                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-lg-3 col-md-6 col-sm-12 col-12" style="padding:0px 15px 10px 10px;">
        <div class="card border-3 border-top border-top-primary">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center;">Total Expenses</h6>
                <div class="metric-value d-inline-block">
                    <h3 class="mb-1">NRs. @Model.StockReportVM.TotalStock</h3>
                </div>
                <div class="metric-label d-inline-block float-right text-danger font-weight-bold">
                    <span class="icon-circle-small icon-box-xs text-danger bg-danger-light bg-danger-light "></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-10">
        <div class="card" style="height: 390px;width:101%">
            <div>
                <canvas id="myChart" style="height: 350px; width: 95%; padding-left:20px; padding-top: 10px"></canvas>


            </div>
        </div>
    </div>
    <div class="col-xl-2">
        <div class="card border-3 border-top border-top-primary" style="margin-bottom: 20px; background: linear-gradient(180deg, green 90%, white);">
            <div class="card-body text-center">
                <h6 style="text-align:center; color:black;">Jeevan Metal Handicraft</h6>
                <h7 style="text-align:center; color:white;">Available Balance</h7>
                <div class="metric-value d-inline-block">
                    <h6 class="mb-1" style="color:white;">NRs. @Model.BankBalanceVM.AvailableBalance</h6>
                </div>

            </div>
        </div>
        <div class="card border-3 border-top border-top-primary" style="margin-bottom: 20px; background: linear-gradient(180deg, orangered 90%, white);">
            <div class="card-body text-center">
                <h6 class="text" style="text-align:center; color:white;">Current Account Status</h6>
                <h7 class="text" style="text-align: center; color: white;">Over Draft Balance</h7>
                <div class="metric-value d-inline-block">
                    <h6 class="mb-1" style="color:white;">NRs. @Model.BankBalanceVM.OD_Balance</h6>
                </div>

            </div>
        </div>
        <div class="card border-3 border-top border-top-primary" style="margin-bottom:10px;">
            <div class="card-body text-center">
                <h6 class="text-muted" style="text-align:center; font-weight:400;">Jeevan Metal Handicraft</h6>
                <h7 class="text-muted" style="text-align:center;">Available Balance</h7>
                <div class="metric-value d-inline-block">
                    <h6 class="mb-1">
                        NRs. @Model.StockReportVM.TotalStock
                    </h6>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="opacity:80%">
    <div class="col-xl-6">
        <div class="card" style="height: 750px; width: 101.5%; padding:20px;">
            <div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col-4">
                        <h4 class="mb-0">HOMEBASED EMPLOYEE BALANCE</h4>
                    </div>
                    <div class="col-8">
                        <marquee width="100%" direction="right" height="20px">
                            <a class="text-danger">Please review the missing Voucher Numbers!</a>

                        </marquee>
                    </div>

                </div>
            </div>
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" style="background-color: white;">
                    <thead>
                        <tr>
                            
                            <th>Employee Name</th>
                            <th>Employee Type</th>
                            <th>Amount</th>
                           

                        </tr>
                    </thead>
                    <tbody id="table">
                        @if (Model != null)
                        {

                            foreach (var item in Model.EmployeeCurrentBalanceVM)
                            {
                                <tr>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.EmployeeType</td>
                                    <td>@item.CurrentBalance</td>
                                 
                                   
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>function numb() {
        var value = $("#stocks").val();
        console.log(value);
        var x = value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        $(this).find('#stocks').text(x);
    };
    $("#table tbody tr").each(function () {
        var value = $("#qty").val();
        if (value == 0) {
            $(this).val('');
        }
    });



    /*---Cards Homepage---*/</script>

