    <script type="text/javascript" src="Content/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="Content/js/script.js"></script>

</head>

<body onload="sortDropdownList()">
    
        <div class="row" style="margin-left:10px;">
            <div class="col-md-3">
                <h4 style="padding-bottom:5px;">Bank Accounts:</h4> <select asp-for="BankID" , id="list"
                                                                             class="form-control"
                                                                             asp-items="@(new SelectList(@ViewBag.ListofBankss,"BankID", "ACHolderName"))">
                </select>
            </div>
            <div class="col-md-1">
                <input type="button" class="btn btn-success" value="Search" onclick="VendorPurchase()" style="margin-top: 40px; float:left;">
            </div>
        </div>
        @if (Model != null)
        {
<div class="row">
    <div class="col-xl-6">
        <h5 style="margin-top: 15px; margin-left: 23px;">A/C Name: @Model?.ACHolderName</h5>
        <h6 style="margin-top: 15px; margin-left: 23px;"> A/C No: @Model?.AccountNo</h6>
    </div>
    <div class="col-xl-6">

        <a class="btn btn-warning" role="button" style="float: right; margin-right: 32px;" onclick="dropdownselect3()"><i class="fas fa-wallet"></i> Deposit</a>

        <a class="btn btn-warning" role="button" style="float: right; margin-right: 32px;" onclick="dropdownselect2()"><i class="fas fa-history"></i> Balance</a>

    </div>
</div>
                <div style="overflow-y: scroll; height:100%;">
                    <table id="example" class="table table-striped table-bordered" style="width:97%; background-color:white; margin:20px;">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Transaction By</th>
                                <th>Transaction Type</th>
                                <th>Cheque No.</th>
                                <th>Credit Amt.(NRs)</th>
                                <th>Debit Amt.(NRs)</th>
                                <th>Balance(NRs)</th>
                                <th>Remarks</th>
                                
                            </tr>
                        </thead>
                        <tbody id="table">

                            @foreach (var debitcredit in Model.BankLedgerViewModel)
                            {
                            <tr>
                                <td>@debitcredit.Date</td>
                            <td>@debitcredit.TransactionBy</td>
                                <td>@debitcredit.TransactionType</td>
                                <td>@debitcredit.ChqNo</td>
                                <td class="payment">@debitcredit.CreditAmount</td>
                                <td class="reciept">@debitcredit.DebitAmount</td>
                                <td class="balance"></td>
                                <td>@debitcredit.Remarks</td>
                               
                            </tr>
                            }

                    </table>
                </div>}

<script>

    function dropdownselect2() {

            var VenID = $('#list').val();
            window.location.href = '@Url.Action("AddBankOldBalance", "Banks")?AC_No=' + VenID;
        }
        function dropdownselect3() {

            var VenID = $('#list').val();
            window.location.href = '@Url.Action("AddNewBankTransaction", "Banks")?AC_No=' + VenID;
        }

        function VendorPurchase() {
            var transDate = $('#transactionDate').val();
            var VenID = $('#list').val();
            window.location.href = '@Url.Action("DisplayBanksLedger", "Banks")?AC_No=' + VenID;

        }




</script>

