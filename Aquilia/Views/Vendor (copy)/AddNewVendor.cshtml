    @model Aquilia.Models.Vendor
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>
<body>
    <form method="post" asp-action="AddNewVendor" asp-controller="Vendor">
        <hr />
        <div class="card" style="width: 18rem; padding: 10px; width: 100%; font-family: 'Public Sans', sans-serif; opacity: 80%;">
            <div class="card-body">
                <h1 style="padding-bottom:30px;">New Vendor Entry</h1>
                <div class="row">
                    <div class="col-xl-3">
                        <label for="vendorName">Vendor Name</label>
                        <input type="text" asp-for="VendorName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Vendor Name">
                    </div>
                    <div class="col-xl-3">
                        <label for="exampleInputPassword1">Vendor Address</label>
                        <input type="text" asp-for="VendorLocation" class="form-control" id="exampleInputPassword1" placeholder="Enter the Vendor's Address">
                    </div>
                    <div class="col-xl-3">
                        <label for="exampleInputPassword1">Vendor Contact</label>
                        <input type="text" asp-for="VendorContact" class="form-control" id="exampleInputPassword1" placeholder="Enter the Vendor's Contact Number">
                    </div>
                    <div class="col-xl-3">
                        <label for="exampleInputPassword1">Vendor PAN No.</label>
                        <input type="number" asp-for="PANNo" class="form-control" id="exampleInputPassword1" placeholder="Enter the Vendor's PAN Number">
                        <input type="text" asp-for="Active" class="form-control" id="exampleInputPassword1" placeholder="Enter the Vendor's PAN Number" hidden value="true">
                    </div>
                </div>
                <button type="reset" class="btn btn-danger" style="margin-top:20px; float:right;"><i class="far fa-window-close"></i> Cancel</button>
                <button type="submit" class="btn btn-success" style="margin-top:20px; margin-right:20px; float:right;"><i class="far fa-check-square"></i> Submit</button>

            </div>
        </div>

    </form>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>



</html>
