    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>
<body>

    <div class="row" style="        padding-left: 30px;
        padding-top: 30px;
        width: 97%;
        background-color: white;
        margin: 20px;
        opacity: 80%;
">
        <div class="col-sm-6">
            <div class="card" style="        width: 18rem;
        padding: 20px;
        width: 600px;
        font-family: 'Public Sans', sans-serif;
        ">
                <div class="card-body">
                    <form method="post" asp-action="AddNewCustomer" asp-controller="Customer">
                        <h1 style="padding-bottom:30px;">New Customer Entry</h1>
                        <div class="form-group">
                            <label for="CustomerName">Customer Name</label>
                            <input type="text" asp-for="CustomerName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Customer Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Customer Address</label>
                            <input type="text" asp-for="CustomerAddress" class="form-control" id="exampleInputPassword1" placeholder="Enter the Customer's Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Customer Contact</label>
                            <input type="text" asp-for="ContactNo" class="form-control" id="exampleInputPassword1" placeholder="Enter the Customer's Contact Number">
                        </div>

                        <button type="reset" class="btn btn-danger" style="margin-top:20px; float:right;"><i class="far fa-window-close"></i> Cancel</button>
                        <button type="submit" class="btn btn-success" style="margin-top:20px; margin-right:20px; float:right;"><i class="far fa-check-square"></i> Submit</button>
                    </form>
                </div>
            </div>
        </div>


        <div class="col-xl-6">
            <div class="card mb-10">
                <div class="card-header">
                    <i class="fas fa-chart-bar mr-1"></i>
                    <h2 style="text-align:center;">New Customers List (Top 10 Buys)</h2>
                    <table id="example" class="table table-striped table-bordered" style="width:97%; background-color:white; margin:20px; padding-right:10px;">
                        <thead>
                            <tr>
                                <th>Customer Number</th>
                                <th>Customer Name</th>
                                <th>Customer Location</th>
                                <th>Contact Number</th>
                                <th>PAN No.</th>
                            </tr>
                        </thead>
                        <tbody>

                        <tfoot>
                            @*@foreach (Customer CustomerL in Model)
                            {
                    <tr>
                        <td>@Customer.CustomerID</td>
                        <td>@Customer.CustomerName</td>
                        <td>@Customer.CustomerLocation</td>
                        <td>@Customer.CustomerContact</td>
                        <td>@Customer.PANNo</td>
                    </tr>*@

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    <script src="js/bootstrap.min.js"></script>

</body>



</html>
