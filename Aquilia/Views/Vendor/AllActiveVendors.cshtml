

<table id="example" class="table table-striped table-bordered" style="width:97%; background-color:white; margin:20px;">
    <thead>
        <tr>
            <th>Vendor Number</th>
            <th>Vendor Name</th>
            <th>Vendor Location</th>
            <th>Contact Number</th>
            <th>PAN No.</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    <tfoot>
        @foreach (var vendor in Model)
        {
<tr>
    <td>@vendor.VendorID</td>
    <td>@vendor.VendorName</td>
    <td>@vendor.VendorLocation</td>
    <td>@vendor.VendorContact</td>
    <td>@vendor.PANNo</td>
    <td>
        @Html.ActionLink("Edit", "EditVendor", new { id = vendor.VendorID }) |
        @Html.ActionLink("Details", "Details", new { id = vendor.VendorID }) |
        @Html.ActionLink("Delete", "Delete", new { id = vendor.VendorID })
    </td>
</tr>
        }
    </tfoot>
</table>
<script>$(document).ready(function () {
        $('#example').DataTable();
    });</script>

